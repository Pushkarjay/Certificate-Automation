{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "Backend/**/*",
    "Frontend/**/*", 
    "scripts/**/*",
    "Database/**/*",
    "Google/**/*"
  ],
  "exclude": [
    "node_modules",
    "Backend/node_modules",
    "Frontend/React/node_modules",
    "dist",
    "Backend/Generated-Certificates/**/*"
  ]
}
